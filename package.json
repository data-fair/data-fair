{
  "name": "data-fair",
  "version": "5.4.1",
  "description": "",
  "main": "server",
  "scripts": {
    "build-types": "df-build-types ./api/",
    "test": "npm -w test run test",
    "test-deps": "docker compose --profile test up -d --wait",
    "report": "nyc report --reporter=html",
    "lint": "eslint . && npm -w ui run lint && npm -w test run lint && npm -w next-ui run lint",
    "lint-fix": "eslint --fix . && npm -w ui run lint-fix && npm -w test run lint-fix && npm -w next-ui run lint-fix",
    "dev-deps": "docker compose --profile dev up -d --wait",
    "stop-dev-deps": "docker compose --profile dev stop",
    "dev-api": "MODE=server npm -w api run dev",
    "dev-worker": "MODE=worker OBSERVER_PORT=9091 npm -w api run dev",
    "dev-ui": "npm -w ui run dev",
    "dev-zellij": "zellij --layout .zellij.kdl",
    "build": "npm -w ui run build",
    "upgrade": "node upgrade",
    "build-parsers": "npm run build-parser-where && npm run build-parser-select && npm run build-parser-order-by && npm run build-parser-group-by",
    "build-parser-where": "peggy --dts --format es --output api/src/api-compat/ods/where.peg.js api/src/api-compat/ods/where.pegjs api/src/api-compat/ods/lexic.pegjs",
    "build-parser-select": "peggy --dts --format es --output api/src/api-compat/ods/select.peg.js api/src/api-compat/ods/select.pegjs api/src/api-compat/ods/lexic.pegjs",
    "build-parser-order-by": "peggy --dts --format es --output api/src/api-compat/ods/order-by.peg.js api/src/api-compat/ods/order-by.pegjs api/src/api-compat/ods/lexic.pegjs",
    "build-parser-group-by": "peggy --dts --format es --output api/src/api-compat/ods/group-by.peg.js api/src/api-compat/ods/group-by.pegjs api/src/api-compat/ods/lexic.pegjs",
    "postinstall": "patch-package",
    "prepare": "husky || true",
    "check-types": "tsc",
    "quality": "npm run test-deps && npm run lint && npm run build-types && npm -w next-ui run build && npm -w parquet-writer run build && npm run test && npm audit --omit=dev --audit-level=critical"
  },
  "engines": {
    "node": "v24"
  },
  "author": "",
  "license": "AGPL-3.0-only",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@data-fair/lib-types-builder": "^1.7.0",
    "@data-fair/lib-utils": "^1.6.1",
    "@types/content-disposition": "^0.5.8",
    "@types/mime-types": "^3.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.12.0",
    "@types/streamsaver": "^2.0.5",
    "@types/unzipper": "^0.10.10",
    "eslint-plugin-mocha": "^11.2.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "neostandard": "^0.12.0",
    "patch-package": "^8.0.0",
    "peggy": "^4.2.0",
    "typescript": "~5.6.3"
  },
  "workspaces": [
    "api",
    "ui",
    "next-ui",
    "shared",
    "test",
    "parquet-writer"
  ],
  "dependencies": {
    "@data-fair/lib-node": "^2.9.1"
  }
}
