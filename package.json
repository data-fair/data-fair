{
  "name": "data-fair",
  "version": "4.31.1",
  "description": "",
  "main": "server",
  "scripts": {
    "test": "npm -w test run test",
    "test-deps": "docker compose --profile test up -d --wait",
    "report": "nyc report --reporter=html",
    "lint": "eslint . && npm -w ui run lint && npm -w test run lint",
    "lint-fix": "eslint --fix . && npm -w ui run lint-fix && npm -w test run lint-fix",
    "dev-deps": "docker compose --profile dev up -d --wait",
    "stop-dev-deps": "docker compose --profile dev stop",
    "dev-api": "npm -w api run dev",
    "dev-ui": "npm -w ui run dev",
    "dev-zellij": "zellij --layout .zellij.kdl",
    "build": "npm -w ui run build",
    "upgrade": "node upgrade",
    "doc": "nuxt --port 3144 --config-file doc/nuxt.config.js",
    "build-doc": "nuxt generate --config-file ${PWD}/doc/nuxt.config.js",
    "serve-doc": "TARGET=http://localhost:3144/doc-dist/ npm run build-doc && http-server .",
    "postinstall": "patch-package",
    "prepare": "husky || true",
    "check-types": "tsc",
    "quality": "npm run test-deps && npm run lint && npm run test && npm audit --omit=dev --audit-level=critical"
  },
  "engines": {
    "node": "v22"
  },
  "author": "",
  "license": "AGPL-3.0-only",
  "type": "module",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "babelOptions": {
        "babelrc": false,
        "configFile": false,
        "presets": [
          "@babel/preset-env"
        ]
      }
    },
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:vue/recommended"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@koumoul/gh-pages-multi": "^0.7.1",
    "clean-modules": "^2.0.4",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-vue": "^9.32.0",
    "http-server": "^13.0.2",
    "husky": "^9.1.7",
    "neostandard": "^0.12.0",
    "patch-package": "^8.0.0",
    "semver-extract": "^1.2.0",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "api",
    "ui",
    "doc",
    "shared",
    "test"
  ]
}
